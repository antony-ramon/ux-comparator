<% typology = typologies.first %>
<% liked_by_user = 0 %>
<% typology.get_likes.each do |like| %>
  <% liked_by_user = 1 if like.voter_id == current_user.id %>
<% end %>


<% if liked_by_user > 0 %>
  <%= link_to unlike_typology_path(typology), remote: true, class: "btn btn-light btn-sm text-muted font-weight-light py-1", style: "width: 200px; height:30px", method: :put do %>
    <i class="far fa-trash-alt"></i> Remove from favorites
  <% end %>
<% else %>
  <%= link_to like_typology_path(typology), remote: true, class: "btn btn-primary py-1", style: "width: 200px; height:30px", method: :put do %>
    <i class="fas fa-plus-circle p-1 white"></i> Add to favorites!
  <% end %>
<% end %>
